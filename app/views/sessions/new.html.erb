<html>
  <body>
    <div class="alert alert-danger" role="alert">
      <%= flash[:danger] %>
    </div>
    <h1>Connecte-toi :</h1>

    <p>Remplis les champs suivants :</p>
      <%= form_tag url_for(action: 'create'), method: 'post' do %>
        <div class="form-group">
          <%= label_tag 'Email :' %>
          <%= text_field_tag 'email', @email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag 'Mot de passe :' %>
          <%= text_field_tag 'password', @password, class: 'form-control' %>
        </div>
        <div>
          <%= submit_tag 'Connecte-toi !', class: "btn btn-primary" %>
        </div>
      <% end %>    
  </body>
</html>
