<html>
  <body>
    <h1>Modifie le gossip :</h1>
  

    <p>Remplis les champs suivants :</p>
    <%= form_for @gossip do |f| %>
      <div class="form-group">
        <%= label_tag 'Titre' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag 'Contenu du gossip' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div>
        <%= submit_tag 'Modifier le gossip' %>
      </div>
    <% end %>
  </body>
</html>